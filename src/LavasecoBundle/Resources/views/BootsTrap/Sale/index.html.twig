        function signUpClient() {
            $('#modalSignUpClient').modal('show');
        }

        function ajaxSaleBill() {
            factura.observations = $("#bill_observation").val();
            factura.paymentAgreementId = $("#bill_payAgreement").val();
            $.ajax({
                url: "{{ path("lavaseco_api_sale_billing") }}",
                method: "POST",
                dataType: "json",
                data: factura,
                timeout: 30000,
                beforeSend: function (xhr) {
                    loadingModal("Registrando la factura en el sistema... Espere por favor.");
                },
                success: function (result) {
                    closeLoadingModal();
                    $('#wayToPay').modal('hide');
                    openModalAlerErrorSuccess("Confirmación Factura", "Facturado con éxito",
                            function () {
                                location.reload();
                            }
                    );
                },
                error: function () {
                    closeLoadingModal();
                    openModalAlerErrorSuccess("Error al Factura", "Error al registrar la factura");
                }
            });
        }

        function billing() {
            if (factura.customerId === 0) {
                if (!confirm("¿Desea facturar sin seleccionar un cliente?")) {
                    return;
                }
            }
            if (updateChange()) {
                factura.cashReceived = $("#cashReceived").val();
                factura.change = $("#change").val();
                ajaxSaleBill();
            } else {
                openModalAlerErrorSuccess("Error", "Verifique el dinero dado por el cliente");
            }
        }

        function wayToPay() {
            if (factura["services"].length !== 0) {
                factura ["printBill"] = $('#printBill').is(":checked");
                factura ["sendBill"] = $('#sendBill').is(":checked");
                factura ["notifyRedyDelivery"] = $('#checkboxes-2-2').is(":checked");
                factura ["notifyDelivered"] = $('#checkboxes-2-3').is(":checked");

                document.getElementById('divMissingMoney').style.display = 'none';

                var paymentAgreement = $('#bill_payAgreement').val();
                if (paymentAgreement === "2") {//2 es el id del metodo de contra entrega
                    factura.cashReceived = 0;
                    factura.change = 0;
                    ajaxSaleBill();
                } else {
                    $('#paymentTittle').text('Cobro ' + $('#bill_payAgreement option:selected').data('name'));
                    $('#wayToPay').modal('show');
                    $('#divTotalBill').html("<p class='text-right'><strong>Total Factura: $" + $.number(factura.total) + "</strong></p>");

                    if ($('#bill_payAgreement').val() !== "3") {
                        document.getElementById('divMissingMoney').style.display = 'block';
                    }
                    addWayToPay();
                }
            } else {
                openModalAlerErrorSuccess("Error", "No es posible facturar, aún no ha agregado ningun servicio a la factura.");
            }

        }

        function addWayToPay() {
            $("#selectWayToPay").empty();
            $.ajax({
                url: "{{ path('lavaseco_api_pay_method') }}",
                method: "GET",
                contentType: 'application/json',
                dataType: 'json',
                success: function (payMethods) {
                    for (var i in payMethods) {
                        loadWayPay(payMethods[i]);
                    }
                }
            });
        }

        function loadWayPay(payment) {
            var html = "<option value=\"" + payment.name + "\" data-id=\"" + payment.id + "\" data-name=\"" + payment.name + "\">" + payment.name + "</option>";
            $("#selectWayToPay").append(html);
        }

        function updateChange() {
            var paymentAgreement = $('#bill_payAgreement').val();

            if (paymentAgreement !== "3") {//3 es el id del metodo de abono
                var change = $("#cashReceived").val() - factura.total;

                if (change < 0) {
                    $("#change").val('');
                    $("#divCashReceived").removeClass("has-success");
                    $("#divCashReceived").addClass("has-error");
                    return false;
                } else {
                    $("#change").val(change);
                    $("#divCashReceived").addClass("has-success");
                    $("#divCashReceived").removeClass("has-error");
                    return true;
                }
            } else {
                var missingMoney = factura.total - $("#cashReceived").val();

                if ($("#cashReceived").val() > factura.total) {
                    $("#change").val('');
                    $("#missingMoney").val('');
                    $("#divCashReceived").removeClass("has-success");
                    $("#divCashReceived").addClass("has-error");
                    return false;
                } else {
                    $("#change").val(0);
                    $("#missingMoney").val(missingMoney);
                    $("#divCashReceived").addClass("has-success");
                    $("#divCashReceived").removeClass("has-error");
                    return true;
                }
            }
        }

        function openRedeemPoints() {
            if (factura.customerId === 0) {
                openModalAlerErrorSuccess("Error", "No es posible realizar esta acción si no ha seleccionado un cliente");
            } else if (factura.total === 0) {
                openModalAlerErrorSuccess("Error", "No es posible realizar esta acción si el monto de la factura es igual a cero");
            } else if (factura.redeemedPoints === 0) {
                openModalAlerErrorSuccess("Error", "No es posible realizar esta acción el cliente no posee puntos para redimir");
            } else {
                var currentPoints = parseInt($("#currentPointUser").text());

                if (currentPoints >= factura.total) {
                    $("#redeemPoints").val(total);
                } else {
                    $("#redeemPoints").val(currentPoints);
                }

                $("#modalRedeemPoints").modal('show');
                $("#totalRedeemPoints").val(factura.total - $("#redeemPoints").val());
                $("#subtotalRedeemPoints").val(factura.subtotal);
                //abre ventana modal
                $("#modalRedeemPoints").modal('show');
            }
        }

        function updateRedeemPoints() {
            var redeemedPoints = parseInt($("#redeemPoints").val());
            var currentTotal = factura.total - redeemedPoints;
            var currentPoints = userPoints;

            if (redeemedPoints > factura.subtotal) {
                $("#totalRedeemPoints").val(factura.total);
                $("#divRedeemPoints").removeClass("has-success");
                $("#divRedeemPoints").addClass("has-error");
                return false;
            } else if (redeemedPoints > currentPoints) {
                $("#totalRedeemPoints").val(factura.total);
                $("#divRedeemPoints").removeClass("has-success");
                $("#divRedeemPoints").addClass("has-error");
                return false;
            } else {
                var currentTotal = factura.total - redeemedPoints;
                $("#totalRedeemPoints").val(currentTotal);
                $("#divRedeemPoints").addClass("has-success");
                $("#divRedeemPoints").removeClass("has-error");
                return true;
            }
        }

        function saveRedeemPoints() {
            if (updateRedeemPoints()) {
                var points = factura.redeemedPointBill = $("#redeemPoints").val();
                // factura.total = $("#totalRedeemPoints").val();

                $("#modalRedeemPoints").modal('hide');

                $("#redeemedPointBill").html("<strong>$" + $.number(points) + "</strong>");
                $("#totalBill").html("<strong>$" + $.number(factura.total - parseInt(points)) + "</strong>");
                $("#subtotalBill").html("<strong>$" + $.number(factura.subtotal) + "</strong>");
                $("#currentPointUser").text(userPoints - points);

            } else {
                factura.redeemedPointBill = 0;
                $("#currentPointUser").text(userPoints);
                openModalAlerErrorSuccess("Error", "La cantidad de puntos redimibles no puede superar el total de la factura y/o la cantidad de puntos que tiene el cliente");
            }
        }
    </script>

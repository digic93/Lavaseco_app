        function displayResult(item) {
            var html = "<p> <strong> Nombre Cliente: </strong>" + item.text + " <br><strong> </p>";
            $("#infoClientBill").html(html);

            $.ajax({
                url: "{{ path('lavaseco_api_get_customer') }}/" + item.value,
                method: "GET",
                contentType: 'application/json',
                dataType: 'json',
                success: function (user) {
                    var html = "";
                    if (!user) {
                        return;
                    }
                    factura.customerId = user.id;
                    $("#sendBill").attr('disabled', true);
                    $("#checkboxNotifyEmail").html("");

                    html = "<p> <strong> Nombre Cliente: </strong>" + user.name + "<br>";

                    if (user.email !== null) {
                        html += "<strong> Email Cliente: </strong>" + user.email + "<br>";
                        $("#sendBill").attr('disabled', false);
                        $("#sendBill").attr('checked', true);
                        notifyByEmail();
                    }
                    if (user.phoneNumber !== null) {
                        html += "<strong> numero: </strong>" + user.phoneNumber + "<br>";
                    }
                    userPoints = user.points;
                    html += "<strong> Puntos Acumulados: </strong><label id =\"currentPointUser\">" + user.points + "</label><br></p>";
                    $("#infoClientBill").empty();
                    $("#infoClientBill").html(html);
                }
            });
        }

        function notifyByEmail() {
            var html = "";
            var result = {"notification":
                        [
                            {"name": "Listo para Entrega", "id": 2},
                            {"name": "Entregado", "id": 3}
                        ]
            };
            $("#titleNotify").text("Notificar");

            for (var i in result.notification) {
                html += "<label for=\"checkboxes-2\">\

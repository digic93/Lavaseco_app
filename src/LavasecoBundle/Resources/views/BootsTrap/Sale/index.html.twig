{% extends "LavasecoBundle:BootsTrap:Base/base.html.twig" %}

{% block stylesheets %}
    <style>
        .service:hover
        {
            cursor: pointer;
            border-color: #5cb85c;
        }

        .detail_item:hover{
            cursor: pointer;
            background-color: rgba(255, 0, 0, 0.14);
        }
        #billTable tbody .hoverService:hover {
            cursor: pointer;
            background-color: #A9F5A9;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <h1>Ventas</h1>
        </div>
        <div class="col-md-4 text-right">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('lavaseco_cash') }}/1"class="btn btn-warning" type="button" >
                    <i class="fa fa-money" aria-hidden="true"></i>
                    Retiros de Caja
                </a>
            {% endif %}    
            <a id="closeSalePoint" href="{{ path('lavaseco_cash') }}" class="btn btn-danger">
                <i class="fa fa-lock" aria-hidden="true"></i>
                Cierre de Caja
            </a>
        </div>
    </div>
    <hr>
    <div class="row">
        <!--Productos por categoria-->
        <div class="col-md-8">
            <h3>Servicios</h3>
            <div class="input-group">
                <input id="servicesSearch" type="text" class="form-control" placeholder="Buscar...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
                </span>
            </div>
            <br>
            <div class="btn-group text-center" role="group">
                {% for serviceCategory in serviceCategories %}
                    <button type="button" class="btn btn-default" onClick="getServiceByCategoryId({{ serviceCategory.id }});" >
                        <img src="{{ asset( serviceCategory.img ) }}" style="width: 30px;" /> {{ serviceCategory.name }}
                    </button>
                {% endfor %}
            </div>
            <hr>
            <div id="servicesItems">
                {% for serviceCategory in serviceCategories %}
                    {% for subServiceCagory in serviceCategory.subServiceCategories %}
                        <div class="col-sm-6 col-md-4 service-itm" onclick="itemShowModal(this);"
                             data-subcategory-id="{{ subServiceCagory.id }}"
                             data-subcategory-name="{{ subServiceCagory.name }}"
                             data-category-name="{{ serviceCategory.name }}">
                            <div class="thumbnail service">
                                <img src="/serviceImg/servicio.jpg" alt="img">
                                <h5 class="text-center">{{ subServiceCagory.name }}</h5>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        <!--Factura-->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-file-text" aria-hidden="true"></i> Factura</h3>
                </div>
                <div class="panel-body">
                    <h2 class="text-center">{{ billContent.companyName }}</h2>
                    <h4 class="text-center">Nit {{ billContent.fiscalId }}</h4>
                    <h6 class="text-center">{{ billContent.address }}</h6>
                    <hr>
                    <p>
                        Cajero: {{ app.user.name }}<br>
                        PV: {{ app.session.get('salePoint').name }}
                    </p>
                    <hr>
                    <p>
                    <div class="well input-group">
                        <input id="clientBill" type="text" class="form-control" placeholder="Buscar Cliente..." autocomplete="off" />
                        <span class="input-group-btn">
                            <button id="addClientBill" class="btn btn-secondary" type="button"  onclick="signUpClient();">
                                <i class="fa fa-user-plus" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                    <div id="infoClientBill" class="form-group"></div>
                    </p>
                    <hr>
                    <p>
                        {{ billContent.head }}
                    </p>
                    <hr>
                    <p>
                    <table id="billTable" style="width: 100%;">
                        <thead>
                            <tr style="border-bottom-style: solid; border-bottom-width: 1px">
                                <th class="text-center">Servicio</th>
                                <th class="text-right">Cantidad</th>
                                <th class="text-right">Precio</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr style="border-top-style: solid; border-top-width: 1px">
                                <td>Subtotal</td>
                                <td></td>
                                <td id="subtotalBill" class="text-right"><strong>$0</strong></td>

                            </tr>

                            <tr>
                                <td>Puntos Redimidos</td>
                                <td></td>
                                <td id="redeemedPointBill" class="text-right"><strong>$0</strong></td>
                            </tr>

                            <tr style="border-top-style: solid; border-top-width: 1px">
                                <td><strong>Total</strong></td>
                                <td></td>
                                <td id="totalBill" class="text-right"><strong>$0</strong></td>
                            </tr>
                        </tfoot>
                        <tbody id="billDetail">
                        </tbody>
                    </table>
                    <hr>
                    <div class="form-group">
                        <label for="sel1">Acuerdo de Pago</label>
                        <select class="form-control" id="bill_payAgreement">
                            {% for paymentAgreement in paymentAgreements %}
                                <option value="{{ paymentAgreement.id }}" data-name="{{ paymentAgreement.name }}">{{ paymentAgreement.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <p> <b> Observaciones </b> </p>
                    <textarea id="bill_observation" name="bill_observation" required="required" class="form-control"></textarea>
                    <hr>
                    <p>
                        {{ billContent.foot }}
                    </p>
                    <hr>

                    <div id="" class="form-group">
                        <button type="button" class="btn btn-info btn-block" onclick="openRedeemPoints();">
                            Redimir Puntos
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </button>
                    </div>

                    <hr>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="checkboxes-1">Factura:</label>
                        <div class="col-md-7">
                            <div id="checkboxBill" class="checkbox">
                                <label for="checkboxes-1">
                                    <input  id="printBill" type="checkbox" value="imprimir" checked>
                                    Imprimir
                                </label>
                                <label for="checkboxes-1">
                                    <input id="sendBill"  type="checkbox" value="correo" disabled="true">
                                    Enviar al correo
                                </label>
                            </div>
                        </div>
                    </div>

                    <div id="" class="form-group">
                        <label id="titleNotify" class="col-md-4 control-label" for="checkboxes"></label>
                        <div class="col-md-7">
                            <div id="checkboxNotifyEmail" class="checkbox">

                            </div>
                        </div>
                    </div>

                    <hr>

                    <button type="button" class="btn btn-success btn-block" onclick="wayToPay();">
                        Facturar
                        <i class="fa fa-check" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--Modal Window-->
    <div id="addServiceModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="titleModal" class="modal-title" id="gridSystemModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- Service options -->
                        <div class="col-md-4">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label id="name_service" class="control-label col-md-5">Servicio</label>
                                    <div class="col-md-7">
                                        <select id="servicesSelectImput" onChange="changeImputsDescriptions(this);" class="form-control">
                                        </select>
                                    </div>
                                </div>                            
                                <div id="imputsDescriptions"></div>        
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-horizontal">

                                <div class="form-group">
                                    <label id="name_service" class="control-label col-md-5">Valor $</label>
                                    <div class="col-md-7">
                                        <div class="input-group">
                                            <input id="priceServiceImput" type="text" class="form-control text-center" value="">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label id="name_service" class="control-label col-md-5">Cantidad</label>
                                    <div class="col-md-7">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button class="btn btn-success" type="button" onclick="quantityServiceChange(false);">
                                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                                </button>
                                            </span>
                                            <input id="quantity_service" type="text" class="form-control text-center" value="1">
                                            <span class="input-group-btn">
                                                <button class="btn btn-success" type="button" onclick="quantityServiceChange(true);">
                                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-horizontal">
                                <p> <b> Observaciones </b> </p>
                                <textarea id="observationService" required="required" class="form-control"></textarea>
                                <hr>
                                <button id="addBillItem" type="button" class="btn btn-primary btn-block" onclick="addService();">Agregar <i class="fa fa-plus" aria-hidden="true"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="divButtonModal" class="modal-footer">
                    <button id="editBillItem" type="button" class="btn btn-info" onclick="editItem();" style="display: none;">Guardar</button>
                    <button id="deleteBillItem" type="button" class="btn btn-danger" onclick="deleteItem()" style="display: none;">Eliminar</button>
                    <button id="cancelBillItem" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <!--end Modal Window-->

    <!-- Modal -->
    <div id="modalSignUpClient" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Registro de Clientes</h4>
                </div>
                <div class="modal-body">
                    {% include 'LavasecoBundle:BootsTrap:Settings/Customer/customerForm.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Redimir Puntos -->
    <div id="modalRedeemPoints" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        <i class="fa fa-stack-overflow" aria-hidden="true"></i> 
                        Redimir Puntos
                    </h4>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div id="divRedeemPoints" class="form-group">
                                <p>Puntos Acumulados</p>
                                <div class="input-group" id="specificWayPay">
                                    <span class="input-group-addon"><i class="fa fa-star"></i></span>
                                    <input class="form-control" id="redeemPoints" type="text" autocomplete="off" onkeyup="updateRedeemPoints();"/>
                                </div>
                            </div>

                            <hr>

                            <div class="form-group">
                                <p>Subtotal</p>
                                <div class="input-group" id="divCashReceived">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-usd"></i></span>
                                    <input class="form-control" id="subtotalRedeemPoints" type="text" autocomplete="off" disabled/>
                                </div>
                            </div>

                            <div class="form-group">
                                <p>Total a Pagar</p>
                                <div class="input-group" id="divCashReceived">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-usd"></i></span>
                                    <input class="form-control" id="totalRedeemPoints" type="text" autocomplete="off" disabled/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" onclick="saveRedeemPoints();"/>Canjear</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Forma de Pago-->
    <div id="wayToPay" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        <i class="fa fa-money" aria-hidden="true"></i>
                        <label id="paymentTittle"></label>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="form-group">
                                <p>Forma de Pago</p>
                                <div class="input-group" id="specificWayPay">
                                    <select id="selectWayToPay" onChange="" class="form-control">
                                    </select>
                                </div>
                            </div>
                            <hr>

                            <div class="form-group">
                                <div id="divTotalBill"></div>
                            </div>

                            <div class="form-group">
                                <p>Dinero Recibido<span class="req">*</span></p>
                                <div class="input-group" id="divCashReceived">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-usd"></i></span>
                                    <input class="form-control" id="cashReceived" type="text" autocomplete="off" onkeyup="updateChange();"/>
                                </div>
                            </div>

                            <div id="divChange" class="form-group">
                                <p>Vueltas</p>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-usd"></i></span>
                                    <input class="form-control" id="change" type="text" autocomplete="off" disabled/>
                                </div>
                            </div>

                            <div id="divMissingMoney" class="form-group" style="display:none;">
                                <p>Dinero Faltante</p>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-usd"></i></span>
                                    <input class="form-control" id="missingMoney" type="text" autocomplete="off" disabled/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit"  onclick="billing();" class="btn btn-success"/>Cobrar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("BootsTrapTheme/js/jquery.number.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("BootsTrapTheme/js/bootstrap-typeahead.min.js") }}"></script>

    <script>
        var factura = {};
        var namecategories = '';
        var idCategory = 0;
        
        $(document).ready(function () {
            total = 0;
            userPoints = 0;
            factura["total"] = 0;
            factura["services"] = [];
            factura["customerId"] = 0;
            factura["observations"] = "";
            factura["paymentAgreementId"] = 0;
            factura["cashReceived"] = 0;
            factura["change"] = 0;
            factura["subtotal"] = 0;
            factura["redeemedPointBill"] = 0;

            $("#quantity_service").number(true);
            $("#priceServiceImput").number(true);
            $("#cashReceived").number(true);
            $("#change").number(true);
            $("#redeemPoints").number(true);
            $("#subtotalRedeemPoints").number(true);
            $("#totalRedeemPoints").number(true);

            //Evento cerrar ventana modal
            $('#addServiceModal').on('hidden.bs.modal', function (e) {
                clearServicesFormImput();
            });
        });

        //evento para editar detalles de la factura
        $("#billTable tbody").on("click", ".hoverService", function () {
            console.log($(this).attr('data-id'));
            console.log($(this).attr('data-id-service'));
            addServicesSelectImput($(this).attr('data-id-service'), 'edit');
            loadBillItem($(this).attr('data-id'));
            
        });

        $('#clientBill').typeahead({
            order: "asc",
            ajax: {
                url: "{{ path('lavaseco_api_search_customer') }}",
                method: "POST",
                loadingClass: "loading-circle",
                preDispatch: function (query) {
                    return {
                        nameOrEmail: query
                    };
                },
                preProcess: function (data) {
                    if (data.success === false) {
                        return false;
                    }
                    if (data.length === 0) {
                        $("#addClientBill").attr('disabled', false);
                    } else {
                        $("#addClientBill").attr('disabled', true);
                    }
                    return data;
                }
            },

            displayField: "data",
            valueField: "id",
            onSelect: displayResult
        });

        $('#servicesSerch').typeahead({
            order: "asc",
            ajax: {
                url: "{{ path('lavaseco_api_sale_service_category') }}",
                method: "POST",
                loadingClass: "loading-circle",
                preDispatch: function (query) {
                    return {
                        nameOrEmail: query
                    };
                },
                preProcess: function (data) {
                    if (data.success === false) {
                        return false;
                    }
                    return data;
                }
            },

            displayField: "data",
            valueField: "id",
            onSelect: displayResult
        });

//Functions////////////////////////////////////////////////////////
        function itemShowModal(item) {
            var subCategoryId = $(item).data("subcategoryId");
            var categories = $(item).data("subcategoryName");
            $("#titleModal").html("Agregar " + categories);
            addServicesSelectImput(subCategoryId, 'add');
            namecategories = categories;
            idCategory = subCategoryId;
        }

        //Id category 2do nivel
        function addServicesSelectImput(categoryId, option) {
            $.ajax({
                url: "{{ path('lavaseco_api_sale_service_category') }}/" + categoryId,
                method: "GET",
                contentType: 'application/json',
                dataType: 'json',
                beforeSend: function (xhr) {
                    loadingModal("Cargando los Servicios Disponibles... Espere por favor.");
                },
                success: function (servicesCategories) {
                    if (!servicesCategories.length) {
                        openModalAlerErrorSuccess("Error", "Servicios no Disponibles");
                        return;
                    }
                    $('#addServiceModal').modal('show');
                    addImputsDescriptions(servicesCategories[0].id);
                    $("#servicesSelectImput").empty();

                    for (var key in servicesCategories) {
                        var serviceCategory = servicesCategories[key];
                        addOptionsServicesSelectImput(serviceCategory);
                    }
                    
                    if (option === 'add') {
                        document.getElementById('addBillItem').style.display = 'block';
                        document.getElementById('cancelBillItem').style.display = '';   
                        document.getElementById('editBillItem').style.display = 'none';
                        document.getElementById('deleteBillItem').style.display = 'none';
                    }
                    else if (option === 'edit'){
                        document.getElementById('editBillItem').style.display = '';
                        document.getElementById('deleteBillItem').style.display = '';
                        document.getElementById('addBillItem').style.display = 'none';
                        document.getElementById('cancelBillItem').style.display = 'none';     
                    }
                    closeLoadingModal();
                }
            });
        }

        function addOptionsServicesSelectImput(service) {
            var html = "<option value=\"" + service.name + "\" data-id=\"" + service.id + "\" data-name=\"" + service.name + "\">" + service.name + "</option>";
            $("#servicesSelectImput").append(html);
        }

        function addService() {
            var serviceDetail = {};
            var price = parseInt($("#priceServiceImput").val());
            var quantity = parseInt($("#quantity_service").val());
            
            serviceDetail["service"] = $("#servicesSelectImput").find(':selected').data('name');
            serviceDetail["price"] = price;
            serviceDetail["quantity"] = quantity;
            serviceDetail["total"] = price * quantity;
            serviceDetail["descriptors"] = getDescriptors();
            serviceDetail["observations"] = $("#observationService").val();
            serviceDetail["id"] = factura["services"].length;
            serviceDetail["categories"] = namecategories;
            serviceDetail["idCategory"] = idCategory;
            
            factura["services"].push(serviceDetail);
            
            console.log(factura["services"]);
            console.log(serviceDetail);
            
            addToBillSummaryServices(serviceDetail);
            updateInvoceTotals(serviceDetail.total);

            addImputsDescriptions($("#servicesSelectImput").find(':selected').data('id'));
            $("#quantity_service").val(1);
            $("#observationService").val("");
            $("#imputsDescriptions").empty();
            serviceDetail = {};
        }

        function addToBillSummaryServices(serviceDetail) {
            var html =
                    "<tr style=\"border-bottom-style: solid; border-bottom-width: 2px\">\
                        <td colspan=\"3\">" + serviceDetail.categories + "</td>\
                    </tr>";
            html +=
                    "<tr class=\"hoverService\" data-id=\"" + serviceDetail.id + "\" data-id-service=\"" + serviceDetail.idCategory + "\">\
                            <td>" + serviceDetail.service + "</td>\
                            <td class=\"text-right\">" + serviceDetail.quantity + "</td>\
                            <td class=\"text-right\">$" + $.number(serviceDetail.total) + "</td>\
                        </tr>\
                        <tr>\
                            <td colspan=\"3\">" + getDescriptionsToString(serviceDetail.descriptors) + "</td>\
                        </tr>\
                        <tr>\
                            <td colspan=\"3\"> <i> Observaciones : " + serviceDetail.observations + "</i></td>\
                        </tr>";
            $("#billDetail").append(html);
        }

        function updateInvoceTotals(currentTotal) {
            factura.total = parseInt(currentTotal) + parseInt(factura.total);
            factura.subtotal = factura.total;
            total = factura.total;

            $("#totalBill").html("<strong>$" + $.number(factura.total) + "</strong>");
            $("#subtotalBill").html("<strong>$" + $.number(factura.subtotal) + "</strong>");
        }

        function addImputsDescriptions(serviceCategoryId) {
            $.ajax({
                url: "{{ path('lavaseco_api_service_descriptions') }}/" + serviceCategoryId,
                method: "GET",
                contentType: 'application/json',
                dataType: 'json',
                success: function (services) {
                    var decriptions = services.decriptions;
                    $("#imputsDescriptions").empty();
                    $("#priceServiceImput").val(services.service.price);
                    for (var desc in decriptions) {
                        addImputsDescription(decriptions[desc], decriptions.indexOf(decriptions[desc]));
                    }
                }
            });
        }

        function addImputsDescription(description, idDescription) {
            var options = description.options;
            var html = "<div class=\"form-group\">\
                            <label class=\"control-label col-md-5\">" + description.name + "</label>\
                            <div class=\"col-md-7\">\
                                <select id=\"description_" + idDescription + "\" class=\"form-control imputDescription\">\
                                    <option data-id=\"0\" data-name=\"\" value=\"0\">seleccione una opción ....</option>";
            for (var key in options)
                html += "<option value=\"" + options[key].name + "\" data-id=\"" + options[key].id + "\" data-name=\"" + options[key].name + "\" >" + options[key].name + "</option>";
            html += "</select></div></div>";
            $("#imputsDescriptions").append(html);
        }

        function changeImputsDescriptions(selectServiceCategory) {
            addImputsDescriptions($(selectServiceCategory).find(':selected').data('id'));
        }

        function getDescriptors() {
            var descriptors = [];
            $(".imputDescription").each(function (index) {
                var id = parseInt($(this).find(':selected').data('id'));
                if (id !== 0) {
                    descriptors.push({
                        "id": id,
                        "name": $(this).find(':selected').data('name')
                    });
                }
            });
            return descriptors;
        }

        function loadBillItem(idService) {
            for (var i in factura.services) {             
                if (factura.services[i].id === parseInt(idService)) {

                    $("#priceServiceImput").val(factura.services[i].price);
                    $("#quantity_service").val(factura.services[i].quantity);
                    $("#observationService").val(factura.services[i].observations);
                    $("#servicesSelectImput").val(factura.services[i].service);
                    for (var j in factura.services[i].descriptors) {
                        var index = factura.services[i].descriptors.indexOf(factura.services[i].descriptors[j]);
                        $("#description_" + index).val(factura.services[i].descriptors[j].name);
                    }

                    var index = factura.services.indexOf(factura.services[i]); // obtenemos el indice

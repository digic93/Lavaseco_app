//Functions////////////////////////////////////////////////////////        
        function itemShowModal(item) {
            var serviceName = $(item).data("subcategoryName");
            var subCategoryId = $(item).data("subcategoryId");
            $("#titleModal").html("Agregar " + serviceName);

            addServicesSelectImput(subCategoryId);
            $('#addServiceModal').modal('show');

        }


{% extends "LavasecoBundle:BootsTrap:Base/base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset("BootsTrapTheme/css/jquery.dataTables.css") }}">
{% endblock %} 

{% block body %} 

    <h1>Caja {{ app.session.get('salePoint').name }}</h1>
    <p>
        {% if title == "Apertura" %}
            Para realizar ventas primero tienes que iniciar el turno.   
        {% endif %}

    </p>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <!-- Form Tipo descriptor-->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title" id="cashPointTittle">{{ title }} de Caja</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
                        <fieldset>
                            <!-- Text input-->
                            <div class="form-group">
                                {{ form_errors(form.payment) }}
                                <label id="" class="col-md-4 control-label" for="textinput">{{ form_label(form.payment, 'Saldo') }}</label>  
                                <div class="col-md-5">
                                        <div class="input-group">
                                            <div class="input-group-addon">$</div>
                                            {{ form_widget(form.payment, {'attr': {'class': 'form-control  input-md'} }) }}
                                        </div>
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_errors(form.description) }}
                                <label id="" class="col-md-4 control-label" for="textinput">{{ form_label(form.description, 'Concepto') }}</label>  
                                <div class="col-md-5" >
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control  input-md', 'disabled': editObservations } }) }}
                                </div>
                            </div>

                            <!-- Button -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="singlebutton"></label>
                                <div class="col-md-5 pull-right">
                                    <button type="submit" class="btn {% if title == "Cierre" %} btn-warnig {% else %} btn-success {% endif %}" style="margin-left: 13px;" type="button">
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                        {{ title }} de Caja
                                    </button>
                                </div>
                            </div>
                        </fieldset>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {% if data.transactions is defined %}
            <div class="col-md-12">
                <h3>Transacciones Registradas en el Turno</h3>
                <hr>

                <table id="transactionTable" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Información Punto de Venta</th>
                            <th>Tipo Transaccion</th>
                            <th>Monto</th>
                            <th>Fecha Transacción</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody> 
                        {% for ObjectTransaction in ObjectTransactions %}
                            <tr>
                                <td>{{ ObjectTransaction.salePoint }}</td>
                                <td>{{ ObjectTransaction.typeTransaction }}</td>
                                <td>{{ ObjectTransaction.payment }}</td>
                                <td>{{ ObjectTransaction.createdAt }}</td>
                                <td>{{ ObjectTransaction.description }}</td>
                            </tr>
                        {% endfor %}       
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("BootsTrapTheme/js/jquery.number.min.js") }}"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset("BootsTrapTheme/js/jquery.dataTables.js") }}"></script>

    <script>
        $(document).ready(function () {
            $("#transactionTable").DataTable();
            $("#lavasecobundle_cashtransaction_payment").number(true);
        });

        function withdrawCash() {
            $("#modalWithdrawCash").modal('show');
            
        }
        function saveTransactionwithdrawCash() {
            //ajax
        }
    </script>
{% endblock %}
{% extends "LavasecoBundle:BootsTrap:Base/base.html.twig" %}

{% block stylesheets %}
    <style>
        textarea {
            height: 138px !important;
            width: 269px !important;
        }

        .treeNode {
            list-style: none;
            margin-left: 0;
            padding-left: 1em;
        }

        /* layout.css Style */
        .upload-drop-zone {
            height: 180px;
            border-width: 2px;
            margin-bottom: 20px;
        }

        /* skin.css Style*/
        .upload-drop-zone {
            color: #ccc;
            border-style: dashed;
            border-color: #ccc;
            line-height: 180px;
            text-align: center
        }
        .upload-drop-zone.drop {
            color: #222;
            border-color: #222;
        }
    </style>
{% endblock %} 

{% block body %} 
    <h1>Configuración de Servicios</h1>
    <p>
        Configura los servicios y sus respectivas categorias    
    </p>
    <hr>
    <div class="row">
        <!--arbol de categorias y servicios-->
        <div class="col-md-8">
            <div class="list-group">
                <ul class="treeNode">
                    {% for serviceCagory in serviceCagories %}
                        <li>
                            <a href="#categori_{{ serviceCagory.id }}" class="list-group-item categroy" 
                               role="button" data-toggle="collapse" href="#categori_{{ serviceCagory.id }}" 
                               aria-expanded="false" aria-controls="categori_{{ serviceCagory.id }}"
                               data-service-name="{{ serviceCagory.name }}"
                               data-service-description="{{ serviceCagory.description }}"
                               data-service-type="Categoria">
                                <i class="fa fa-list-ul" aria-hidden="true"></i>
                                {{ serviceCagory.name }}
                            </a>
                            <ul class="collapse treeNode" id="categori_{{ serviceCagory.id }}">
                                {% for subServiceCategory in serviceCagory.subServiceCategories %}
                                    <li>
                                        <a href="#subcategori_{{ subServiceCategory.id }}" class="list-group-item categroy" 
                                           role="button" data-toggle="collapse" href="#subcategori_{{ subServiceCategory.id }}" 
                                           aria-expanded="false" aria-controls="subcategori_{{ subServiceCategory.id }}" 
                                           data-service-name="{{ subServiceCategory.name }}"
                                           data-service-description="{{ subServiceCategory.description }}"
                                           data-service-type="Subcategoria">
                                            <strong>&#8226;</strong>
                                            {{ subServiceCategory.name }}
                                        </a>
                                        <ul class="collapse treeNode" id="subcategori_{{ subServiceCategory.id }}">
                                            {% for service in subServiceCategory.subServiceCategories %}
                                                <li>
                                                    <button type="button" class="list-group-item categroy" 
                                                            data-service-name="{{ service.name }}"
                                                            data-service-description="{{ service.description }}"
                                                            data-service-type="Servicio">{{ service.name }}
                                                    </button>
                                                </li>
                                            {% endfor %}
                                            <li>
                                                <button type="button" class="list-group-item addcategroy" data-toggle="modal" 
                                                        data-target="#categoriesModal"
                                                        data-service-type="Servicio"
                                                        data-super-category="{{ subServiceCategory.id }}">
                                                    <strong>+</strong>Agregar Servicio
                                                </button>
                                            </li>
                                        </ul>
                                    </li>
                                {% endfor %}
                                <li>
                                    <button type="button" class="list-group-item addcategroy" data-toggle="modal" 
                                            data-target="#categoriesModal"
                                            data-service-type="Subcategoria"
                                            data-super-category="{{ serviceCagory.id }}">
                                        <strong>+</strong>
                                        Agregar Subcategoria
                                    </button>
                                </li>
                            </ul>

                        </li>    
                    {% endfor %}
                    <div id="newCategory">

                    </div>
                    <li class="list-group-item-success">
                        <button type="button" class="list-group-item addcategroy" data-toggle="modal" 
                                data-target="#categoriesModal" data-service-type="Categoria">
                            <strong>+</strong>
                            Agregar Categoria
                        </button>    
                    </li>
                </ul>
            </div>
        </div>

        <!--Especificacion Categorias y servcios-->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> 
                    <label id="tittle_service_category"></label>
                </div>
                <div class="panel-body">
                    <h3 id="name_service_category" class="text-center">Tipo Categoria o Servicio</h3>
                    <hr>
                    <h4>Descripcion:</h4>
                    <p id="descrip_service_category">...</p>
                    <hr>
                    <div class="btn-group pull-right" role="group">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#categoriesModal" 
                                onclick="updateServiceCategory();">Modificar</button>
                        <button type="button" class="btn btn-default" onclick="deleteServiceCategory();">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- modal Registro Categorias-->
    <div id="categoriesModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 id="titleModal" class="modal-title"></h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        <div class="form-group">
                            <label id="name_new_service" class="col-md-4 control-label" for="textinput">Nombre</label>  
                            <div class="col-md-4">
                                <input id="nameNewCategory" name="textinput" type="text" class="form-control input-md" required="">

                            </div>
                        </div>
                        <div id="priceNewServiceImput" class="form-group">
                            <label id="name_new_service_price" class="col-md-4 control-label" for="textinput">Precio $</label>  
                            <div class="col-md-4">
                                <input id="priceNewService" name="textinput" type="text" class="form-control input-md" required="">

                            </div>
                        </div>

                        <div class="form-group">
                            <label id="description_new_service" class="col-md-4 control-label" for="textarea">Descripción</label>
                            <div class="col-md-4">                     
                                <textarea id="descriptionNewCategory" class="form-control" id="textarea" name="textarea"></textarea>
                            </div>
                        </div>

                        <div id="descriptors" class="form-group" style="display: none;">
                            <label class="col-md-4 control-label" for="checkboxes">Descriptores</label>
                            <div id="select_state_new_service" class="col-md-4">

                            </div>
                        </div>

                        <div class="form-group">
                            <label id="image_new_service" class="col-md-4 control-label" for="filebutton">Icono o Imagen</label>
                            <div class="col-md-4">
                                <input id="filebutton" name="filebutton" class="input-file" type="file">
                            </div>
                        </div>
                        <!-- Drop Zone -->
                        <div class="form-group">
                            <div class="upload-drop-zone" id="drop-zone">
                                Just drag and drop files here
                            </div>
                        </div>
                        <input id="typeCategory" type="hidden" value=""><br>
                        <input id="superCategory" type="hidden" value=""><br>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" onclick="saveNewCategory();">Guardar</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("BootsTrapTheme/js/jquery.number.min.js") }}"></script>
    <script>

        $(".categroy").on('click', function () {
            var serviceName = $(this).data('serviceName');
            var serviceDescription = $(this).data('serviceDescription');
            var serviceTitle = $(this).data('serviceType') + " " + $(this).data('serviceName');
            if (serviceName !== undefined) {
                $("#tittle_service_category").text(serviceTitle);
                $("#name_service_category").text(serviceName);
                $("#descrip_service_category").text(serviceDescription);
            }
        });
        $(".addcategroy").on('click', function () {
            $("#descriptors").hide();
            $("#priceNewServiceImput").hide();
            $("#typeCategory").val($(this).data('serviceType'));
            $("#superCategory").val($(this).data('superCategory'));
            $("#titleModal").html("Agregar " + $(this).data('serviceType'));
            if ($(this).data('serviceType') === "Servicio") {
                getImputsDescriptions();
            }
        });
        $(document).ready(function () {
            $("#priceNewService").number(true);
            //Evento cerrar ventana modal
            $('#categoriesModal').on('hidden.bs.modal', function (e) {
                clearcCategoriesModal();
            })
        });
        function getImputsDescriptions() {
            $.ajax({
                url: "{{ path("lavaseco_api_descriptors") }}",
                method: "GET",
                contentType: 'application/json',
                dataType: 'json',
                success: function (decriptions) {
                    $("#select_state_new_service").empty();
                    $("#descriptors").show();
                    $("#priceNewServiceImput").show();
                    for (var desc in decriptions) {
                        var html = "<div class=\"checkbox\">\
                                    <label for=\"checkboxes-1\">\
                                        <input class=\"checkboxDescriptor\" type=\"checkbox\" name=\"checkboxes\" id=\"checkboxes-1\" value=\"" + decriptions[desc].id + "\">"
                                + decriptions[desc].name +
                                "</label>\
                                </div>";
                        $("#select_state_new_service").append(html);
                    }
                }
            }
            );
        }

        function updateServiceCategory() {
            var name = $("#name_service_category").text();
            var description = $("#descrip_service_category").text();
            if ($("#tittle_service_category").text().length > 0) {
                $("#nameNewCategory").val(name);
                $("#descriptionNewCategory").val(description);
            }
        }

        function deleteServiceCategory() {

        }

        function saveNewCategory() {
            var category = {};
            category['name'] = $("#nameNewCategory").val();
            category['description'] = $("#descriptionNewCategory").val();
            category['type'] = 1;
            if ($("#typeCategory").val() !== "Categoria") {
                category['type'] = 2;
                category['superCategory'] = $("#superCategory").val();
            }


            if ($("#typeCategory").val() === "Servicio") {
                category['type'] = 3;
                category['price'] = $("#priceNewService").val();
                category['descriptors'] = [];
                $(".checkboxDescriptor").each(function (index) {
                    if ($(this).is(":checked")) {
                        category.descriptors.push($(this).val());
                    }
                });
            }

            $.ajax({
                url: "{{ path("lavaseco_api_add_service_category") }}",
                method: "POST",
                dataType: "json",
                data: category,
                success: function (result) {
                    addCategoryAtTree(result.categoryId, category);
                    $('#categoriesModal').modal('hide');
                }
            });
        }

        function addCategoryAtTree(categoryId, category) {
            var type;
            switch (category.type) {
                case 1:
                    type = "categori";
                    break;
                case 2:
                    type = "subcategori";
                    break;
                case 3:
                    type = "service";
                    break;
            }
            ;

            var html = "<a href=\"#" + type + "_" + categoryId + "\" class=\"list-group-item categroy\"\
                   role=\"button\" data-toggle=\"collapse\" href=\"#" + type + "_" + categoryId + "\"\
                   aria-expanded=\"false\" aria-controls=\"" + type + "_" + categoryId + "\"\
                   data-service-name=\"" + category.id + "\"\
                   data-service-description=\"" + category.description + "\"\
                   data-service-type=\"" + type + "\">\
                        <i class=\"fa fa-list-ul\" aria-hidden=\"true\"></i> "
                    + category.name +
                    "</a>\
                <ul class=\"collapse treeNode\" id=\"" + type + "_" + categoryId + "\">\
                    <li>\
                        <button type=\"button\" class=\"list-group-item addcategroy\" data-toggle=\"modal\"\
                                data-target=\"#categoriesModal\"\
                                data-service-type=\"Subcategoria\"\
                                data-super-category=\"0\">\
                            <strong>+</strong>\
                            Agregar Subcategoria\
                        </button>\
                    </li>\
                </ul>";
            $("#newCategory").append(html);

        }

        function clearcCategoriesModal() {
            $("#nameNewCategory").val("");
            $("#descriptionNewCategory").val("");
            $("#priceNewService").val("")
        }
        ;

    </script>
{% endblock %}


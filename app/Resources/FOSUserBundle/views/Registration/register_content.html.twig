        <div class="form-group">
            <label class="col-md-4 control-label" for="selectmultiple">Rol</label>
            <div class="col-md-5">
                {{ form_widget(form.roles, { 'attr':{'class':'form-control'} }) }}
            </div>
        </div>
           

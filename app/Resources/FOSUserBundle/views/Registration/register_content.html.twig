    <fieldset>
        <!-- Form Name -->
        <legend>Usuario</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Nombre</label>  
            <div class="col-md-5">
                {{ form_widget(form.firstName, {'attr':{'class':'form-control input-md'} } ) }}
